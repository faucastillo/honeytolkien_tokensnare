body {
    background: linear-gradient(135deg, #e69a28 0%, #e6c200 50%, #d4a05c 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
}

.login-container {
    background: #fffdf5;
    border-radius: 8px;
    box-shadow: 0 10px 40px rgba(218, 165, 32, 0.3);
    overflow: hidden;
    max-width: 900px;
    margin: 0 auto;
}

.login-left {
    background: linear-gradient(180deg, #fff5dc 0%, #ffe89a 100%);
    padding: 40px;
    border-right: 1px solid #e6c430;
}

.login-right {
    padding: 40px;
    background: #fffdf5;
}

.logo {
    font-size: 32px;
    font-weight: 700;
    color: #c85a1e;
    margin-bottom: 10px;
    font-family: "Poppins", sans-serif;
    letter-spacing: -0.5px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.logo-svg {
    display: inline-block;
    width: 48px;
    height: 48px;
    background-image: url("{{ server_url }}/assets/honey_logo.svg");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    vertical-align: middle;
}

.logo-icon {
    font-size: 36px;
}

.subtitle {
    color: #805914;
    font-size: 14px;
    margin-bottom: 30px;
}

.form-label {
    font-weight: 500;
    color: #805914;
    font-size: 14px;
}

.form-control {
    border-radius: 4px;
    border: 1px solid #e6c430;
    padding: 10px 12px;
    font-size: 14px;
    background: #fffef0;
}

.form-control:focus {
    border-color: #d0a520;
    box-shadow: 0 0 0 0.2rem rgba(208, 165, 32, 0.25);
    background: white;
}

.btn-login {
    background: linear-gradient(135deg, #d0a520 0%, #b07e0b 100%);
    color: white;
    border: none;
    padding: 12px;
    font-weight: 500;
    border-radius: 4px;
    width: 100%;
    margin-top: 20px;
    transition: all 0.3s;
}

.btn-login:hover {
    background: linear-gradient(135deg, #e69a28 0%, #e67c00 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(218, 165, 32, 0.4);
}

.info-item {
    display: flex;
    align-items: start;
    margin-bottom: 20px;
}

.info-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #d0a520 0%, #b07e0b 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-right: 15px;
    flex-shrink: 0;
}

.info-text h6 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 5px;
    color: #804513;
}

.info-text p {
    font-size: 13px;
    color: #805914;
    margin: 0;
}

.links {
    margin-top: 20px;
    text-align: center;
}

.links a {
    color: #d0a520;
    text-decoration: none;
    font-size: 13px;
    margin: 0 10px;
    font-weight: 500;
}

.links a:hover {
    color: #b07e0b;
    text-decoration: underline;
}

.password-toggle {
    cursor: pointer;
    color: #805914;
}

.input-group-text {
    background: #fffef0;
    border-left: none;
    border-color: #e6c430;
}

.form-control.password-input {
    border-right: none;
}

@media (max-width: 768px) {
    .login-left {
        display: none;
    }
}
